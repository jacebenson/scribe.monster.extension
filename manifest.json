{
  "name": "ScribeMonster",
  "version": "0.1.1",
  "description": "Getting the ScribeMonster to help you make scripts",
  "permissions": ["storage"],
  "host_permissions": [
    "https://*.service-now.com/*",
    "https://*.servicenowservices.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"],
      "all_frames": true,
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["assets/scribeMonster.png"],
      "matches": [
        "https://*.service-now.com/*",
        "https://*.servicenowservices.com/*"
      ]
    }
  ],
  "action": {
    "default_icon": {
      "16": "assets/scribeMonster.png",
      "24": "assets/scribeMonster.png",
      "32": "assets/scribeMonster.png"
    },
    "default_title": "Scribe Monster Title",
    "default_popup": "popup.html"
  },
  "icons": {
    "48":  "assets/48.png",
    "128": "assets/128.png"
  },
  "manifest_version": 3
}