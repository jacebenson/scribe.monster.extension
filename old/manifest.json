{
  "name": "Scribe Monster",
  "manifest_version": 3,
  "description": "Scribe Monster",
  "version": "1.0",
  "host_permissions": ["<all_urls>"],
  "permissions": [
    "activeTab",
    "scripting",
    "tabs",
    "storage",
    "declarativeContent"
  ],
  "action": {
    "default_title": "Click Me",
    "default_popup": "popup.html"
  },
  "background": { "service_worker": "background.js" },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript2.js"],
      "run_at": "document_end",
      "all_frames": true
    }
  ]
}